{% extends 'CookbookBundle:default:base.html.twig' %}

{% block main %}

    <main>
        <div id="recipe_container" class="container cb-recipe" title="{{ recipe.id }}">
            <div class="row">
                <div class="col-md-3">
                    <img class="cb-recipe-image" src="{{ asset('img/pancakes.jpg') }}" alt="pancakes" title="Pancakes">
                </div>
                <div class="col-md-9">
                    {% include 'CookbookBundle:recipe:recipeInfo.html.twig' %}
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    {% include 'CookbookBundle:recipe:ingredients.html.twig' %}
                </div>
                <div class="col-md-8">
                    {% include 'CookbookBundle:recipe:preparation.html.twig' %}
                    {% include 'CookbookBundle:recipe:instructions.html.twig' %}
                </div>
            </div>

        </div>
    </main>
{% endblock %}